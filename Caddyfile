# Configuração do Caddy para proxy reverso com HTTPS automático
# O Caddy gera automaticamente certificados SSL gratuitos via Let's Encrypt

# Domínio de produção
stockbit.finderbit.com.br {
    # Proxy reverso para o backend API (precisa vir antes do handle geral)
    handle /api/* {
        reverse_proxy backend:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_addr}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Proxy reverso para arquivos estáticos e media
    handle /static/* {
        reverse_proxy backend:8000
    }

    handle /media/* {
        reverse_proxy backend:8000
    }

    # Proxy reverso para o frontend (catch-all)
    handle {
        reverse_proxy frontend:80
    }

    # Logs
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Configuração para desenvolvimento na porta 8080
# Para usar, acesse: http://localhost:8080
:8080 {
    # API
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Arquivos estáticos
    handle /static/* {
        reverse_proxy backend:8000
    }

    handle /media/* {
        reverse_proxy backend:8000
    }

    # Frontend
    handle {
        reverse_proxy frontend:80
    }

    log {
        output stdout
    }
}

# Headers de segurança globais
header {
    # Remove o header Server por segurança
    -Server
    
    # Previne clickjacking
    X-Frame-Options "SAMEORIGIN"
    
    # Proteção XSS
    X-XSS-Protection "1; mode=block"
    
    # Previne MIME type sniffing
    X-Content-Type-Options "nosniff"
    
    # Política de referrer
    Referrer-Policy "no-referrer-when-downgrade"
}

# Compressão
encode gzip zstd
