# Configurações de Ambiente para Produção
# IMPORTANTE: Copie este arquivo para .env e ajuste conforme seu ambiente

# Django Settings
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
DB_NAME=stockbit_db
DB_USER=stockbit_user
DB_PASSWORD=change-this-strong-password
DB_HOST=db
DB_PORT=5432

# CORS Settings - Adicione os domínios permitidos
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Settings
VITE_API_URL=https://yourdomain.com/api

# Security Settings
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email Settings (configurar conforme necessário)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Logging
LOG_LEVEL=INFO

# Timezone
TIME_ZONE=America/Sao_Paulo
